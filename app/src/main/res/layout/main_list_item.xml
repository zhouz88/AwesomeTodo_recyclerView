<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_medium"
    android:background="?attr/selectableItemBackground">

    <CheckBox
        android:id="@+id/main_list_item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/main_list_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_xsmall"
        android:layout_toRightOf="@+id/main_list_item_check"
        android:layout_alignBaseline="@id/main_list_item_check"
        tools:text="Task 1"/>

    <ImageView
        android:id="@+id/main_list_height_placeholder"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/holo_purple"
        android:layout_below="@id/main_list_item_check"
        android:contentDescription="@null"/>

</RelativeLayout>